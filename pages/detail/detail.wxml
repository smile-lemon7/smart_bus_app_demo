<view class="map_container">
  <map
    id="map"
    style="width:100%;height:1000%"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="15"
    controls="{{controls}}"
    markers="{{markers}}"
    bindmarkertap="markertap"
    polyline="{{polyline}}"
    show-location
    style="width: 100%; height: 300px;"
  ></map>
</view>